---
import {Picture} from "astro:assets";

interface Props {
  title: string;
  subtitle: string;
  image: string;
  icon: string;
  iconBackground?: string;
  author: string;
  color: string;
}

const {title, subtitle, image, color, icon, iconBackground = "var(--plugin-icon-background)", author} = Astro.props;
---
<div class="feature swiper-slide">
  <div class="img-container">
    <Picture alt="" src={image} width="907" height="619" class="img"/>
    <div class="icon-container">
      <Picture src={icon} alt="" class="icon" width="128" height="128"/>
    </div>
  </div>
  <div class="title">
    {title}
    <span class="author">- {author}</span>
  </div>
  <div class="subtitle">{subtitle}</div>
</div>

<style define:vars={{color, iconBackground}}>
.feature {
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 400px;
    background-color: var(--bg-alternate);
    border: 1px solid var(--sep);
    box-sizing: border-box;
}

.img-container {
    padding: 10px;
    background-color: var(--color);
    position: relative;
}

.img {
    width: 100%;
    height: auto;
    aspect-ratio: 907 / 619;
}

.icon-container {
    width: 32px;
    height: 32px;
    padding: 5px;
    border-radius: 8px;
    background-color: var(--iconBackground);
    position: absolute;
    right: 10px;
    bottom: 10px;
}

.icon {
    width: 100%;
    height: 100%;
}

.title {
    margin: 20px 20px 0;
    font-size: 18px;
    line-height: 1.5;
    font-weight: 500;
}

.subtitle {
    margin: 0 20px 20px;
    font-size: 14px;
    line-height: 1.5;
}

.author {
    font-size: 13px;
    line-height: 1.5;
    margin-left: 6px;
}
</style>
