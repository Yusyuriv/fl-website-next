---
import Tag from "@/components/plugins/Tag.astro";
import type {ExtendedPlugin} from "@/pages/plugins/_types";
import {getBaseUrl} from "@/utils";

interface Props {
  plugin: ExtendedPlugin;
  class?: string;
  minHeight?: boolean;
}

const {
  plugin,
  class: className,
  minHeight,
  ...rest
} = Astro.props;
const href = getBaseUrl(true) + `/plugins/${plugin.slug}`;


---

<a class:list={["plugin", className, {minHeight}]} {href} {...rest}>
  <div class="header">
    <img alt="" src={plugin.icon} class="icon" loading="lazy"/>
    <div class="title">
      <div class="name">
        {plugin.name}
        {plugin.isBuiltIn ? <span class="built-in" title="A built-in plugin maintained by the core team">Official</span> : null}
      </div>
      <div class="author">by {plugin.author}</div>
    </div>
  </div>

  <p class="description">
    {plugin.description}
  </p>

  {plugin.tags.length > 0 ? (
    <div class="tags">
      {plugin.tags.sort().map(tag => <Tag>{tag}</Tag>)}
    </div>
  ) : null}
</a>

<style>
.plugin {
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    background-color: var(--bg-alternate);
    border: 1px solid var(--card-sep);
    box-sizing: border-box;
    text-decoration: none;
}

.plugin:hover {
    background-color: var(--bg-alternate-hover);
}

.plugin.minHeight {
    min-height: 200px;
}

.header {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 16px;
    border-bottom: 1px solid var(--card-sep);
}

.icon {
    width: 32px;
    height: 32px;
    object-fit: contain;
}

.title {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.name {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 18px;
    font-weight: 500;
}

.built-in {
    font-size: 12px;
    cursor: default;
    padding: 4px;
    border-radius: 4px;
    background-color: var(--plugin-official-background);
    color: var(--plugin-official-text);
    margin-left: 4px;
}

.author {
    font-size: 14px;
}

.description {
    padding: 12px 16px;
    flex: 1;
}

.tags {
    border-top: 1px solid var(--card-sep);
    padding: 12px 16px;
}
</style>
