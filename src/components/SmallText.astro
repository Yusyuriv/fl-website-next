---
interface Props {
  muted?: boolean;
  smaller?: boolean;
  centered?: boolean;
  class?: string;
}

const {
  muted = false,
  smaller = false,
  centered = false,
  class: className = "",
  ...rest
} = Astro.props;
---
<div class:list={["small-text", className, { muted, smaller, centered }]} {...rest}>
  <slot/>
</div>

<style>
.small-text {
    font-size: 14px;
    line-height: 1.5em;
    color: var(--text);
}

.muted {
    color: var(--muted-text);
}

.smaller {
    font-size: 13px;
}

.centered {
    text-align: center;
}
</style>
