---
import Section from "@/components/main-page/Section.astro";
import SectionHeader from "@/components/SectionHeader.astro";
import SectionSubheader from "@/components/SectionSubheader.astro";
import {Picture} from "astro:assets";
---
<Section even class="customizations-section">
  <SectionHeader>Customizations</SectionHeader>
  <SectionSubheader>Different themes, animation & sound, or simply build your own</SectionSubheader>

  <div class="grid">
    <div>
      <Picture src="https://www.flowlauncher.com/public/images/screenshots/cm_modern.png" alt="modern"
               formats={["avif", "webp"]} densities={[1, 1.5, 2]} width="992" height="632" class="grid-image"/>
    </div>
    <div>
      <Picture src="https://www.flowlauncher.com/public/images/screenshots/cm_theme.png" alt="themeable"
               formats={["avif", "webp"]} densities={[1, 1.5, 2]} width="992" height="628" class="grid-image"/>
    </div>
  </div>
</Section>

<style>
.customizations-section {
    text-align: center;
}

.grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
    margin-top: 32px;
}

.grid-image {
    width: 100%;
    height: auto;
    aspect-ratio: 992 / 632;
    object-fit: contain;
}
</style>
